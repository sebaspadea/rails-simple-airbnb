
<div class="container">
<h1><%= @flat.name %></h1>
<div class="row">
<div class="col-md-6">
<%= image_tag "https://picsum.photos/seed/picsum/800/600", class: "img-fluid" %>
</div>
<div class="col-md-6">
<h4><%= @flat["description"] %></h4>
<p><%= @flat.address %></p>
<p>💲 <%= @flat["price_per_night"] %> 👪<%= @flat["number_of_guest"] %> </p>
<%= link_to "Delete", flat_path(@flat), class: "btn btn-outline-danger", method: :delete, data: { confirm: "Are your sure?"} %>
</div>
</div>
</div>
